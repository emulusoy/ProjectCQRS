{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
          var el = document.getElementById('msgOkModal');
          if (window.bootstrap && el) {
            new bootstrap.Modal(el, { backdrop: 'static' }).show();
          } else {
            // Bootstrap yüklenmemişse kibar fallback
            alert('Mesajınız gönderildi. Teşekkürler!');
          }
        });
    </script>
}